extends layout

block content
  div.container(ng-controller="listsController")
    form
      div.form-group.col-xs-12
        div.input-group
          span.input-group-btn
            button.btn.btn-primary
              i.fa.fa-search
          input.form-control(type="text" placeholder="Search")
      div.form-group.col-xs-6
        button.btn.btn-primary(ng-click="createList()")
          | + Create a List

    div.col-xs-12(ng-repeat="list in lists | orderBy : list.name" ng-if="list.mods.length != 0")
        div.card.list-item.col-xs-12
          div.card-block.col-xs-9
            a(href="/lists/{{list.url_id}}").card-title
              h5 {{list.name}}
            hr
            p {{list.desc}}
            p.card-text
              small.text-muted Created by <a href="/user/{{list.creator}}">{{list.creator}}</a> on {{list.created_date | date : format : timezone}}
          div.card-block.col-xs-3
            h5
              i.fa.fa-star(style="margin-right:1rem;")
              |  0
            h5
              i.fa.fa-cubes(style="margin-right:1rem;")
              | {{modTotal(list.mods)}}
block scripts
  script(type="text/javascript" src="/js/controllers/list.controller.js")
