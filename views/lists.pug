extends layout

block content
  div.container(ng-controller="lists")
    div.col-xs-12(style="padding-bottom:1rem;")
      form
        div.form-group.row
          div.col-xs-12.col-md-8
            div.input-group
              span.input-group-btn
                button.btn.btn-primary
                  i.fa.fa-search
              input.form-control(type="text" placeholder="Search")
          div.col-xs-4.col-md-4
            button.btn.btn-primary(ng-click="createList()")
              | Create a List

    div.col-xs-12(ng-repeat="list in lists")
      div.card.list-item
        div.card-block
          a(href="/lists/{{list.url_id}}").card-title
            h5 {{list.name}}
          p {{list.desc}}
          p.card-text
            small Created by <a href="/user/{{list.creator}}">{{list.creator}}</a> on {{list.created_date | date : format : timezone}}

block scripts
  script(type="text/javascript" src="/js/controllers/listController.js")
