extends ../layout

block content
  div(ng-controller="loginController")
    div(class="ui centered grid")
      div(class="ten wide column")
        div(class="ui segment")
          h2(class="header large") Log In
          div(class="ui form")
            div(class="field")
              label Username
              input(type="text" ng-model="username" placeholder="username")
            div(class="field")
              label Password
              input(type="password" ng-model="password" placeholder="password")
            div(class="field")
              button(class="ui teal button" ng-click="login()") Log In

block scripts
  script(type="text/javascript" src="/js/controllers/login.controller.js")
