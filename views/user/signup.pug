extends ../layout

block content
  div(ng-controller="signupController")
    div(class="ui centered grid")
      div(class="ten wide column")
        div(class="ui segment")
          h2(class="header") Sign Up
          div(class="ui form")
            div(class="ui divider")
            h3(class="header") Account Info
            div(class="field")
              label Username
              input(type="text" ng-model="username" placeholder="username")
            div(class="field")
              label Password
              input(type="password" ng-model="password" placeholder="password")
            div(class="ui  divider")
            h3(class="header") Your Info
            div(class="field")
              label First Name
              input(type="text" ng-model="fname" placeholder="John")
            div(class="field")
              label Last Name
              input(type="text" ng-model="lname" placeholder="Doe")
            div(class="field")
              label Age
              input(type="number" ng-model="age" placeholder="18")
            div(class="field")
              label E-Mail
              input(type="text" ng-model="email" placeholder="example@gmail.com")
            div(class="ui  divider")
            div(class="field")
              button(class="ui teal button" ng-click="signup()") Sign Up
block scripts
  script(type="text/javascript" src="/js/controllers/signup.controller.js")
